{
  "name": "@cloudgraph/cg-provider-aws",
  "version": "0.0.1",
  "description": "cloud-graph provider plugin for AWS used to fetch AWS cloud data.",
  "main": "dist/services/index.js",
  "types": "dist/services/index.d.ts",
  "author": "AutoCloud",
  "license": "MIT",
  "scripts": {
    "build": "yarn prepublish",
    "generate-types": "graphql-codegen --config codegen.yml",
    "prepublish": "yarn generate-types && tsc && yarn cpx 'src/**/*.graphql' dist",
    "test": "NODE_ENV=test jest",
    "lint": "eslint --config .eslintrc.json --ext .js,.ts ./",
    "lint:fix": "eslint --fix --config .eslintrc.json --ext .js,.ts ./"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "@sentry/node": "^6.7.2",
    "aws-sdk": "^2.931.0",
    "graphql": "^15.5.1",
    "lodash": "^4.17.21",
    "pino": "^6.11.3",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@autocloud/eslint-config": "^0.1.0",
    "@graphql-codegen/cli": "1.21.7",
    "@graphql-codegen/typescript": "1.23.0",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.4",
    "@types/pino": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "cpx": "^1.5.0",
    "dotenv": "^10.0.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "4.3.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,graphql,json}": [
      "yarn lint:fix",
      "git add --force"
    ]
  }
}
